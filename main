# Welcome Menu for the doctor surgery # 

def main():

    print("-Welcome to the surgery-")
    print("1: Add appointment")
    print("2: Add patient")
    print("3: Issue prescription")
    


    choice = input("Enter Selection: ")
    if choice == '1':
        A = Appointment()
    elif choice == '2':
        P = Patient()
    if choice == '3':
        P = Prescription()
    elif choice == '0' or choice == 'NULL':
        exit()
    else:
        print("Invalid Choice")



